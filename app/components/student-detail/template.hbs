<h3 class="ui center aligned header"> What Skills Has Each Student Mastered? </h3>
<div class="ui inverted divider"></div>
<div class="ui center aligned">
  <i class="green large checkmark icon"></i>
  Mastered
  <svg class="svg-inline" height="20" width="36">
    <circle cx="24" cy="70%" r="6" stroke-width="0" fill="#34AADC"/>
  </svg>
  Not Given Enough Opportunity
  <svg class="svg-inline" height="20" width="36">
    <circle cx="24" cy="70%" r="6" stroke-width="0" fill="#FF9500"/>
  </svg>
  Not Mastered
</div>
<table class="ui definition very padded small selectable table">
  <thead>
    <tr class="center aligned">
      <th></th>
      {{#each students as |student|}}
        <th>{{student.name}}</th>
      {{/each}}
    </tr>
  </thead>
  <tbody>
    {{#each skills as |skill|}}
      <tr class="{{if (eq skill.id skillSelected) "positive"}}">
        <td class="right aligned selectable"><a href="javascript:;" {{action "sortBySkill" skill.id}}>{{skill.name}}</a></td>
        {{#each students as |student|}}
          <td class="center aligned">
            {{#ui-popup position='top center' inline=true}}
              {{circle-indicator indicatorType=(get-skill-mastery skillMasteries skill.id student.id)}}
            {{/ui-popup}}
            <div class="ui popup">
              {{student-detail-popup student=student skillMasteries=skillMasteries skill=skill}}
            </div>
          </td>
        {{/each}}
      </tr>
    {{/each}}
  </tbody>
</table>
