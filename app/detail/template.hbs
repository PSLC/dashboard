<div class="ui padded centered grid">
  <div class="fifteen wide column">
    <div class="ui vertical segment">
      <h2 class="ui center aligned block header"> Mr. Gill, Period 6 (13 students), 05/04-05/06/16 </h2>
      <h3 class="ui center aligned block header"> What skills has each student mastered? <svg style="display:inline;" height="20" width="56">
        <circle cx="44" cy="50%" r="6" stroke-width="0" fill="#1E4D8F"/>
      </svg> Mastered <svg style="display:inline;" height="20" width="20">
        <circle cx="14" cy="50%" r="3" stroke-width="0" fill="#888888"/>
      </svg> Not Mastered</h3>
      <table class="ui definition very padded small table">
        <thead>
          <tr class="center aligned">
            <th></th>
            {{#each model.students as |student|}}
              <th>{{student.name}}</th>
            {{/each}}
          </tr>
        </thead>
        <tbody>
          {{#each model.skills as |skill|}}
            <tr>
              <td class="right aligned">{{skill.name}}</td>
              {{#each model.students as |student|}}
                <td class="center aligned">
                  {{#if (get-skill-mastery skillMasteries skill.id student.id)}}
                    <svg style="display:inline;" height="20" width="20">
                      <circle cx="50%" cy="50%" r="6" stroke-width="0" fill="#1E4D8F"/>
                    </svg>
                  {{else}}
                    <svg style="display:inline;" height="20" width="20">
                      <circle cx="50%" cy="50%" r="3" stroke-width="0" fill="#888888"/>
                    </svg>
                  {{/if}}
                </td>
              {{/each}}
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
